<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Pokemon" table="pokemon">
    <id name="id" association-key="true"/>
    <field name="name" type="string" column="name" length="25" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="pv" type="integer" column="pv" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="atk" type="integer" column="atk" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="def" type="integer" column="def" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="vit" type="integer" column="vit" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="atkSpe" type="integer" column="atk_spe" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="defSpe" type="integer" column="def_spe" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="xpFactor" type="integer" column="xp_factor" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="capture" type="integer" column="capture" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="appearChance" type="integer" column="appear_chance" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <one-to-one field="id" target-entity="Types" fetch="LAZY">
      <join-columns>
        <join-column name="id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <many-to-many field="idAttack" target-entity="Attack" inversed-by="idPokemon" fetch="LAZY">
      <join-table name="pokemonattack">
        <join-columns>
          <join-column name="id_pokemon" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_attack" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idArea" target-entity="Area" mapped-by="idTrainer" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
