<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Area" table="area">
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="area_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="picturePath" type="string" column="picture_path" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idTrainer" target-entity="Pokemon" inversed-by="idArea" fetch="LAZY">
      <join-table name="areatrainer">
        <join-columns>
          <join-column name="id_area" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_trainer" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
