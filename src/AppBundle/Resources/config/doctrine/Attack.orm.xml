<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Attack" table="attack">
    <id name="id" type="smallint" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="attack_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="name" type="string" column="name" length="12" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="physical" type="boolean" column="physical" nullable="false"/>
    <field name="power" type="smallint" column="power" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="accuracy" type="integer" column="accuracy" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="idType" type="integer" column="id_type" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-many field="idPokemon" target-entity="Pokemon" mapped-by="idAttack" fetch="LAZY"/>
  </entity>
</doctrine-mapping>
